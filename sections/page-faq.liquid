<!-- /sections/page-faq.liquid-->

<div data-section-id="{{ section.id }}" data-section-type="page-faq">
  <div class="wrapper pt1 pb4">
    <div class="grid">
      <div class="grid__item medium-up--two-thirds medium-up--push-one-sixth">
        <h1 class="text-center h3 page__title">{{ section.settings.title }}</h1>
        {% for block in section.blocks %}
          <div class="faq__wrapper">
            <button class="faq__button"
              data-accordion-toggle="accordion-{{ block.id }}"
              aria-controls="accordion-{{ key }}"
              aria-haspopup="true" 
              aria-expanded="false">
              <span class="accordion__title">{{ block.settings.title }}</span>
              <span class="accordion__chevron">
                {% render 'icon-arrow-medium-right' %}
                <span class="a11y__show visually-hidden">{{ 'general.accessibility.expand_menu' | t }}</span>
                <span class="a11y__hide visually-hidden">{{ 'general.accessibility.hide_menu' | t }}</span>
              </span>
            </button>
            <div class="accordion__content accordion__content--faq" 
              data-accordion 
              id="accordion-{{ block.id }}">
                <span {{ block.shopify_attributes }}></span>
                {{ block.settings.content }}
            </div>
          </div>
        {% else %}
          <div class="homepage-page__content rte">
            {{ 'home_page.onboarding.no_content' | t }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Frequently asked question"
        },
        {
          "id": "content",
          "type": "richtext",
          "label": "Text",
          "default": "<p>Share details about your shipping policies, item returns, or customer service.</p>"
        }
      ]
    }
  ],
    "default": {
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        },
        {
          "type": "text"
        }
      ]
    }
}
{% endschema %}
