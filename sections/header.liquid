  "settings": [
    {
      "type": "select",
      "id": "header_style",
      "label": "Header style",
      "default": "split",
      "options": [
        { "value": "logo_center", "label": "Menu | Logo | Cart"},
        { "value": "menu_center", "label": "Logo | Menu | Cart"},
        { "value": "split", "label": "Logo | Spacer | Menu + Cart"},
        { "value": "drawer", "label": "Mobile drawer menu"}
