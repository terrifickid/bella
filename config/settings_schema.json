  {
    "name": "Product grid",
    "settings": [
      {
        "type": "header",
        "content": "Product layout"
      },
      {
        "type": "paragraph",
        "content": "Control how products look when displayed side-by-side in collections and groups of related products."
      },
      {
        "type": "select",
        "id": "collection_text_alignment",
        "label": "Text alignment",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ],
        "default": "text-center"
      },
      {
        "type": "select",
        "id": "product_grid_style",
        "label": "Price hover effect",
        "options": [
          {
            "value": "under",
            "label": "Always show price"
          },
          {
            "value": "hover",
            "label": "Show price on hover"
          }
        ],
        "info": "Price will always show on small devices and phones."
      },
      {
        "type": "checkbox",
        "label": "Show second image on hover",
        "id": "image_hover_enable",
        "default": true
      },
      {
        "type": "header",
        "content": "Image auto-height"
      },
      {
        "type": "paragraph",
        "content": "Fit unevenly sized images into square containers."
      },
      {
        "type": "checkbox",
        "label": "Enable image auto-height",
        "id": "image_autoheight_enable",
        "default": false
      },
      {
        "type": "range",
        "id": "product_grid_aspect_ratio",
        "min": 0.5,
        "max": 1.5,
        "step": 0.1,
        "unit": ":1",
        "label": "Product photo aspect ratio",
        "info": "Wide to tall",
        "default": 1
      },
      {
        "type": "header",
        "content": "Swatches"
      },
      {
        "type": "checkbox",
        "label": "Enable swatches",
        "id": "swatches_enable",
        "info": "Learn more about [color swatches](https:\/\/groupthought.com\/link\/pipeline\/docs\/swatches)",
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Show swatches on collections",
        "id": "swatches_collection_enable",
        "default": true
      },
      {
        "type": "header",
        "content": "Product tags"
      },
      {
        "type": "checkbox",
        "label": "Show sold out tags",
        "id": "tag_sellout",
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Show sale tags",
        "id": "tag_sale",
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Show new product tags",
        "id": "tag_new",
        "default": false
      },
      {
        "type": "range",
        "id": "tag_new_limit",
        "min": 0,
        "max": 90,
        "step": 2,
        "label": "Products show new tag for",
        "default": 14,
        "info": "Days"
      }
    ]
